<?xml version="1.0" encoding="utf-8"?>
<!-- 文件名：fragment_level_select.xml -->
<!-- 位置：res/layout/fragment_level_select.xml -->

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF8E1">

    <!-- 標題 -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="選擇關卡"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#212121"
        android:layout_margin="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 關卡列表 -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <!-- 簡單關卡 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="⭐ 簡單（選擇題）"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#4CAF50"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="12dp" />

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="3"
                android:rowCount="1">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnLevel1"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="4dp"
                    android:text="第1關"
                    android:textSize="18sp"
                    app:cornerRadius="12dp"
                    app:backgroundTint="#81C784"
                    style="@style/Widget.Material3.Button" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnLevel2"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="4dp"
                    android:text="第2關"
                    android:textSize="18sp"
                    app:cornerRadius="12dp"
                    app:backgroundTint="#81C784"
                    style="@style/Widget.Material3.Button" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnLevel3"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="4dp"
                    android:text="第3關"
                    android:textSize="18sp"
                    app:cornerRadius="12dp"
                    app:backgroundTint="#81C784"
                    style="@style/Widget.Material3.Button" />

            </GridLayout>

            <!-- 中等關卡 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="⭐⭐ 中等（拼錢幣）"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#FF9800"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="12dp" />

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="3"
                android:rowCount="1">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnLevel4"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="4dp"
                    android:text="第4關"
                    android:textSize="18sp"
                    app:cornerRadius="12dp"
                    app:backgroundTint="#FFB74D"
                    style="@style/Widget.Material3.Button" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnLevel5"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="4dp"
                    android:text="第5關"
                    android:textSize="18sp"
                    app:cornerRadius="12dp"
                    app:backgroundTint="#FFB74D"
                    style="@style/Widget.Material3.Button" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnLevel6"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="4dp"
                    android:text="第6關"
                    android:textSize="18sp"
                    app:cornerRadius="12dp"
                    app:backgroundTint="#FFB74D"
                    style="@style/Widget.Material3.Button" />

            </GridLayout>

            <!-- 困難關卡 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="⭐⭐⭐ 困難（輸入數量）"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#F44336"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="12dp" />

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="3"
                android:rowCount="1">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnLevel7"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="4dp"
                    android:text="第7關"
                    android:textSize="18sp"
                    app:cornerRadius="12dp"
                    app:backgroundTint="#E57373"
                    style="@style/Widget.Material3.Button" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnLevel8"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="4dp"
                    android:text="第8關"
                    android:textSize="18sp"
                    app:cornerRadius="12dp"
                    app:backgroundTint="#E57373"
                    style="@style/Widget.Material3.Button" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnLevel9"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="4dp"
                    android:text="第9關"
                    android:textSize="18sp"
                    app:cornerRadius="12dp"
                    app:backgroundTint="#E57373"
                    style="@style/Widget.Material3.Button" />

            </GridLayout>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>