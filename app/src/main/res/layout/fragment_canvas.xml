<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <!-- 畫布區域 -->
    <com.b0966031908gmail.happypacker.utils.CanvasView
        android:id="@+id/canvasView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        android:background="@android:color/white"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/toolbarContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 工具列容器 -->
    <LinearLayout
        android:id="@+id/toolbarContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:elevation="8dp"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- 顏色選擇區 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="選擇顏色"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- 黑色 -->
                <View
                    android:id="@+id/colorBlack"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_margin="4dp"
                    android:background="#000000"
                    android:clickable="true"
                    android:focusable="true" />

                <!-- 紅色 -->
                <View
                    android:id="@+id/colorRed"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_margin="4dp"
                    android:background="#F44336"
                    android:clickable="true"
                    android:focusable="true" />

                <!-- 藍色 -->
                <View
                    android:id="@+id/colorBlue"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_margin="4dp"
                    android:background="#2196F3"
                    android:clickable="true"
                    android:focusable="true" />

                <!-- 綠色 -->
                <View
                    android:id="@+id/colorGreen"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_margin="4dp"
                    android:background="#4CAF50"
                    android:clickable="true"
                    android:focusable="true" />

                <!-- 黃色 -->
                <View
                    android:id="@+id/colorYellow"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_margin="4dp"
                    android:background="#FFEB3B"
                    android:clickable="true"
                    android:focusable="true" />

                <!-- 橘色 -->
                <View
                    android:id="@+id/colorOrange"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_margin="4dp"
                    android:background="#FF9800"
                    android:clickable="true"
                    android:focusable="true" />

                <!-- 紫色 -->
                <View
                    android:id="@+id/colorPurple"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_margin="4dp"
                    android:background="#9C27B0"
                    android:clickable="true"
                    android:focusable="true" />

                <!-- 粉紅色 -->
                <View
                    android:id="@+id/colorPink"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_margin="4dp"
                    android:background="#E91E63"
                    android:clickable="true"
                    android:focusable="true" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnMoreColors"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_margin="4dp"
                    android:text="+"
                    android:textSize="24sp"
                    style="@style/Widget.Material3.Button.OutlinedButton" />

            </LinearLayout>
        </HorizontalScrollView>

        <!-- 筆刷粗細 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="筆刷(橡皮擦)粗細"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" />

        <SeekBar
            android:id="@+id/seekbarBrushSize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100"
            android:progress="20" />

        <!-- 操作按鈕 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:gravity="center">

            <!-- 畫筆 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnPen"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:text="畫筆"
                android:textSize="18sp"
                style="@style/Widget.Material3.Button.TonalButton" />

            <!-- 橡皮擦 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEraser"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:text="橡皮擦"
                android:textSize="18sp"
                style="@style/Widget.Material3.Button.TonalButton" />

            <!-- 油漆桶 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnFill"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:text="背景填充"
                android:textSize="18sp"
                style="@style/Widget.Material3.Button.TonalButton" />

            <!-- 清空 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnClear"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:text="全部清空"
                android:textSize="18sp"
                style="@style/Widget.Material3.Button.OutlinedButton" />

            <!-- 儲存 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSave"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:text="儲存畫布"
                android:textSize="18sp"
                app:backgroundTint="#FF6B9E"
                style="@style/Widget.Material3.Button" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>